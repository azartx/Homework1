<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:text="@string/android"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/textViewAndroid"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/avatar" />

    <TextView
        android:id="@+id/posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avatar"
        android:layout_toEndOf="@id/avatar"
        android:padding="25dp"
        android:text="@string/posts"
        android:textColor="#000" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/posts"
        android:layout_alignBottom="@id/posts"
        android:layout_toStartOf="@id/following"
        android:layout_toEndOf="@id/posts"
        android:gravity="center"
        android:text="@string/followers"
        android:textColor="#000" />


    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/followers"
        android:layout_alignBottom="@id/followers"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="25dp"
        android:text="@string/following"
        android:textColor="#000" />

    <TextView
        android:id="@+id/postsData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/posts"
        android:layout_alignTop="@id/avatar"
        android:layout_alignEnd="@id/posts"
        android:layout_toEndOf="@id/avatar"
        android:gravity="center|bottom"
        android:text="@string/no_data"
        android:textColor="#000" />

    <TextView
        android:id="@+id/postsFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/posts"
        android:layout_alignStart="@id/followers"
        android:layout_alignTop="@id/avatar"
        android:layout_alignEnd="@id/followers"
        android:layout_toEndOf="@id/followers"
        android:gravity="center|bottom"
        android:text="@string/no_data"
        android:textColor="#000" />

    <TextView
        android:id="@+id/postsFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/posts"
        android:layout_alignStart="@id/following"
        android:layout_alignTop="@id/avatar"
        android:layout_alignEnd="@id/following"
        android:layout_toEndOf="@id/following"
        android:gravity="center|bottom"
        android:text="@string/no_data"
        android:textColor="#000" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/username"
        android:textColor="#000" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/address"
        android:textColor="#000" />

    <TextView
        android:id="@+id/profile_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address"
        android:layout_marginStart="20dp"
        android:paddingBottom="20dp"
        android:text="@string/description"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/profile_description"

        android:layout_marginStart="20dp"
        android:layout_toStartOf="@id/image2"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/no_data" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/profile_description"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/image3"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/no_data" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/profile_description"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/image4"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/no_data" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/profile_description"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/image5"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/no_data"

        />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/profile_description"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/image6"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/no_data" />

    <ImageView
        android:id="@+id/image6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/profile_description"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/no_data" />

    <Button
        android:id="@+id/directions"
        style="@style/Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:backgroundTintMode="add"
        android:drawableTop="@drawable/ic_baseline_directions_24"
        android:drawableTint="@android:color/holo_blue_bright"
        android:text="@string/directions"
        android:textColor="@android:color/holo_blue_light"
        tools:targetApi="m" />

    <Button
        android:id="@+id/call"
        style="@style/Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/directions"
        android:backgroundTintMode="add"
        android:drawableTop="@drawable/ic_baseline_local_phone_24"
        android:drawableTint="@android:color/holo_blue_bright"
        android:text="@string/call"
        android:textColor="@android:color/holo_blue_light"
        tools:targetApi="m" />

    <Button
        android:id="@+id/save"
        style="@style/Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@id/website"
        android:layout_toEndOf="@id/call"
        android:backgroundTintMode="add"
        android:drawableTop="@drawable/ic_baseline_star_24"
        android:drawableTint="@android:color/holo_blue_bright"
        android:text="@string/save"
        android:textColor="@android:color/holo_blue_light"
        tools:targetApi="m" />

    <Button
        android:id="@+id/website"
        style="@style/Widget.AppCompat.ButtonBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:layout_alignEnd="@id/image3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:backgroundTintMode="add"
        android:drawableTop="@drawable/ic_baseline_insert_link_24"
        android:drawableTint="@android:color/holo_blue_bright"
        android:text="@string/website"
        android:textColor="@android:color/holo_blue_light"
        tools:targetApi="m" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="35dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/directions" />

    <ImageView
        android:id="@+id/bottom_image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/no_data"
        android:layout_below="@id/line" />

    <ImageView
        android:id="@+id/bottom_image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/no_data"
        android:layout_below="@id/line"
        android:layout_toEndOf="@id/bottom_image1"/>

    <ImageView
        android:id="@+id/bottom_image3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/no_data"
        android:layout_below="@id/line"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/bottom_image2"/>

</RelativeLayout>