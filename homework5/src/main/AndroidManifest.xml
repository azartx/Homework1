<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homework5">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission android:name="com.example.homework5.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="com.example.homework5.WRITE_DATABASE" android:protectionLevel="normal" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Homework1">
        <activity android:name=".activities.EditWorkActivity"/>
        <activity android:name=".activities.AddWorkActivity" />
        <activity android:name=".activities.WorksActivity" />
        <activity android:name=".activities.CarInfoActivity" />
        <activity android:name=".activities.EditCarActivity" />
        <activity android:name=".activities.AddCarActivity" />
        <activity android:name=".activities.CarMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.homework5.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files" />

        </provider>

        <provider
            android:authorities="com.example.homework5.adapters.CarWorksProvider"
            android:name=".adapters.CarWorksProvider"
            android:exported="true"
            android:readPermission="com.example.homework5.READ_DATABASE"
            android:writePermission="com.example.homework5.WRITE_DATABASE"/>

    </application>

</manifest>